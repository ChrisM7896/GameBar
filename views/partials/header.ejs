    <style>
        body {
            font-family: Arial, sans-serif;
            color: #4d664d;
            text-shadow: 2px 2px 3px rgb(13, 71, 71);
            font-weight: bold;
            background-color: #0f0f0f;
        }

        .partials-header {
            color: #4d664d;
        }

        #partials-header-hr {
            width: 100%;
            border: 1px solid;
            box-shadow: 0px 0px 20px rgb(13, 71, 71);
            margin-top: 12px;
            margin-bottom: 20px;
        }

        #partials-header-title {
            text-shadow: 0px 0px 20px rgb(13, 71, 71);
            font-size: 2em;
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            margin: 5px;
        }

        #partials-header-user {
            margin: 7px;
            font-weight: 100;
            display: inline-flex;
        }

        #partials-header-logout-button {
            margin: 7px;
            padding: 5px 10px;
            background-color: rgb(23, 34, 34);
            border: solid 1px #4d664d;
            border-radius: 5px;
            cursor: pointer;
            display: inline-flex;
        }

        #partials-header-version {
            position: absolute;
            font-size: 0.9em;
            font-weight: 100;
        }

        #partials-header-logo {
            text-decoration: none;
            color: inherit;
        }
    </style>
</head>

<body>
    <div>
